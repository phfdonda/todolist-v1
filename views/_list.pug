.box#heading
  h1 #{listTitle}

-console.log(item)

.box
  each item in toDoList
    form(action="/delete" method="POST")
      .item
        input(type="checkbox" name="checkbox" value=item._id onChange="this.form.submit()")
        input(type="hidden" name="listName" value=listTitle)
        p= item.name

  form.item(action="/" method="POST")
    input(type="text" name="todo" placeholder="Add TODO item" autocomplete="off")
    button(type="submit" name="listName" value=listTitle) +
